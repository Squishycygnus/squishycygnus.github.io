---
interface Props {
    level: number;
    id: string;
}

const { level, id } = Astro.props;

const Element = `h${level}`;
---

<div {id}>
    <Element><slot /></Element>
    <a href={`#${id}`}>#</a>
</div>

<style lang="scss">
    div {
        position: relative;
        display: flex;
        align-items: center;

        &:has(h2, h3) {
            border-bottom: solid 0.1rem var(--text);
            padding: 1.75rem 0;
        }

        &:hover a {
            opacity: 1;
        }
    }

    a {
        position: absolute;
        left: -1rem;
        text-decoration: none;
        color: var(--link);
        opacity: 0;
        transition: all 0.25s;
    }
</style>
